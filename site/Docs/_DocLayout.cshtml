@{
    Layout = "~/_Layout.cshtml";
}

@section head {
    <script src="@Href("~/Scripts/prettify/prettify.js")" type="text/javascript"></script>
    <script src="@Href("~/Scripts/jquery.cookie.js")" type="text/javascript"></script>
    <link href="@Href("~/Content/prettify.css")" rel="stylesheet" type="text/css" />
}

@RenderPage("~/docs/_TableOfContents.cshtml")

<article id="doc">
    <section>
        @RenderBody()
    </section>
</article>
<div style="clear:both;"></div>
<script>
    $(document).ready(function () {
        //for each pre element that has a code element child...
        $("pre > code").parent().each(function () {
            if (!$(this).hasClass("prettyprint") && !$(this).hasClass("none")) {
                $(this).addClass("prettyprint");
            }
        });
        prettyPrint();
    });
</script>
